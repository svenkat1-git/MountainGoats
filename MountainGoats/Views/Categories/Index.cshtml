@model IEnumerable<MountainGoatsBikes.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
            </tr>
        }
    </tbody>
</table>
